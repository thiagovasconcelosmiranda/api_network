generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  slug     String  @id
  email    String  @unique
  password String
  name     String
  birth    String?
  city     String?
  state    String?
  avatar   String  @default("default.jpg")
  cover    String  @default("default.jpg")
  bio      String?
  link     String?
  Tweet    Tweet[]
}

model Tweet {
  id       Int      @id @default(autoincrement())
  userSlug String
  body     String
  image    String?
  createAt DateTime @default(now())
  answerOf Int      @default(0)
  user     User     @relation(fields: [userSlug], references: [slug])
}

model TweetLike {
  id       Int    @id @default(autoincrement())
  userSlug String
  tweetId  Int
}

model AnswerLike {
  id       Int    @id @default(autoincrement())
  userSlug String
  answerId Int
}

model Follow {
  id        Int    @id @default(autoincrement())
  userSlug  String
  user2Slug String
}

model Trend {
  id       Int      @id @default(autoincrement())
  hashtag  String
  counter  Int      @default(1)
  updateAt DateTime @default(now())
}

model Answer {
  id       Int     @id @default(autoincrement())
  body     String
  tweetId  Int
  image    String?
  userSlug String
}
